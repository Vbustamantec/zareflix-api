{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"src/**/*.ts",
			"src/types/**/*.d.ts"
		],
		"types": ["express", "node", "cors", "jest"]
	},
	"include": ["src/**/*", "tests/**/*.test.ts"],
	"exclude": ["node_modules"]
}
